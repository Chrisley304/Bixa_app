<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/NombreUsuario"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-76dp"
            android:layout_marginRight="15dp"
            android:textAlignment="textEnd"
            android:layout_toEndOf="@id/Textvw_MensajeUsuario"
            android:text="admin"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/Textvw_MensajeUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="13dp"
            android:textColor="@color/blanco_chido"
            android:layout_marginBottom="0dp"
            android:background="@drawable/caja_respuesta_usuario"
            android:padding="8dp"
            android:text="Hola Bixa"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/Textvw_HoraMenUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:text="8:00"
            android:layout_toStartOf="@id/Textvw_MensajeUsuario"
            android:layout_alignBottom="@id/Textvw_MensajeUsuario"
            android:textColor="#C0C0C0"
            android:textSize="10sp" />


    </RelativeLayout>

</RelativeLayout>